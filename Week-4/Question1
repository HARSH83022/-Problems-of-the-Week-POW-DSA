public class FirstRecurringCharacter {
    public static String firstRecurringChar(String s) {
        int n = s.length();

        for (int i = 0; i < n; i++) {
            char current = s.charAt(i);
            for (int j = i + 1; j < n; j++) {
                if (s.charAt(j) == current) {
                    // Return as soon as we find a repeated character
                    return String.valueOf(current);
                }
            }
        }

        // If no repeating character is found
        return null;
    }

    public static void main(String[] args) {
        System.out.println(firstRecurringChar("acbbac")); // Output: "b"
        System.out.println(firstRecurringChar("abcdef")); // Output: null
        System.out.println(firstRecurringChar("abca"));   // Output: "a"
    }
}
