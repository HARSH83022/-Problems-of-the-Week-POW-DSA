public class EqualSumPartitionBruteForce {
    public static boolean canPartition(int[] nums) {
        int sum = 0;
        for (int num : nums) sum += num;
        if (sum % 2 != 0) return false;
        return canPartitionHelper(nums, 0, sum / 2);
    }

    private static boolean canPartitionHelper(int[] nums, int index, int target) {
        if (target == 0) return true;
        if (index >= nums.length || target < 0) return false;
        return canPartitionHelper(nums, index + 1, target - nums[index]) ||
               canPartitionHelper(nums, index + 1, target);
    }

    public static void main(String[] args) {
        int[] arr1 = {15, 5, 20, 10, 35, 15, 10};
        System.out.println(canPartition(arr1));
        int[] arr2 = {15, 5, 20, 10, 35};
        System.out.println(canPartition(arr2));
    }
}
